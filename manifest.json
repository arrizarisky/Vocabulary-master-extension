{
  "manifest_version": 3,
  "name": "Tambakata: Save and translate new vocabulary",
  "version": "1.0",
  "description": "Capture new English vocabulary and store it neatly in one centralized PDFâ€”manual or automatic.",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://cdnjs.cloudflare.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
